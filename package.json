{
  "name": "shodan",
  "version": "0.5.2",
  "description": "Discord and home automation bot",
  "repository": "https://github.com/danfoy/shodan-discord",
  "main": "index.js",
  "scripts": {
    "test": "mocha . --extension .spec.js --extension .test.js",
    "version": "standard-version",
    "deploy": "node index.js",
    "stage": "nodemon index.js"
  },
  "author": "Dan Foy",
  "license": "ISC",
  "dependencies": {
    "discord.js": "^12.2.0",
    "dotenv": "^8.2.0"
  },
  "mocha": {
    "ignore": ["**/node_modules/**"],
    "recursive": true
  },
  "standard-version": {
    "header": "# Changelog\n\nThis file is automatically generated and updated using [SemVer](https://semver.org) conventions.\n\n\n",
    "releaseCommitMessageFormat": "build(release): bump to {{currentTag}}",
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING",
              "BREAKS"
            ]
          }
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "parserOpts": {
            "noteKeywords": [
              "BREAKING CHANGE",
              "BREAKING CHANGES",
              "BREAKING",
              "BREAKS"
            ]
          }
        }
      ]
    ],
    "types": [
      {
        "type": "feat",
        "section": "Features"
      },
      {
        "type": "fix",
        "section": "Bug Fixes"
      },
      {
        "type": "build",
        "section": "Plumbing"
      },
      {
        "type": "docs",
        "section": "Plumbing"
      },
      {
        "type": "style",
        "section": "Plumbing"
      },
      {
        "type": "refactor",
        "section": "Plumbing"
      },
      {
        "type": "perf",
        "section": "Plumbing"
      },
      {
        "type": "test",
        "section": "Plumbing"
      }
    ]
  },
  "release": {
    "ci": false
  },
  "devDependencies": {
    "chai": "^4.3.4",
    "conventional-changelog-cli": "^2.0.34",
    "glob": "^7.1.6",
    "mocha": "^9.0.0",
    "nodemon": "^2.0.4",
    "standard-version": "^9.1.0"
  }
}
